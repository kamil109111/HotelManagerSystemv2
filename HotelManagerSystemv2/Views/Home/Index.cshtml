@model IEnumerable<HotelManagerSystemv2.Areas.Admin.Models.Room>


<style>
    /* Carousel base class */
    .carousel {
        margin-bottom: 4rem;
    }
    /* Since positioning the image, we need to help out the caption */
    .carousel-caption {
        bottom: 3rem;
        z-index: 10;
    }

    /* Declare heights because of positioning of img element */
    .carousel-item {
        height: 32rem;
    }

        .carousel-item > img {
            position: absolute;
            top: 0;
            left: 0;
            min-width: 100%;
            height: 32rem;
        }
</style>
<div>

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/Images/travel-5410070_1280.jpg">
                <svg class="bd-placeholder-img" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img"><rect width="100%" height="100%" fill="#777" /></svg>
                <div class="container">
                    <div class="carousel-caption text-left">
                        <h1>Witaj!</h1>
                        <p>W sercu gór, na wysokości 900 m n.p.m. czeka na Państwa wygodny i komfortowy Hotel. Położony blisko głównych szlaków turystycznych i wyciągów narciarskich. </p>

                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/Images/window-3178666_1280.webp">
                <svg class="bd-placeholder-img" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img"><rect width="100%" height="100%" fill="#777" /></svg>
                <div class="container">
                    <div class="carousel-caption text-right">
                        <h1>Nasze pokoje</h1>
                        <p>W każdym pokoju spotkają się Państwo z wysokim standardem i komfortem, który z pewnością zaspokoi nawet najbardziej wymagających Gości! W ofercie mamy pokoje 2-osobowe, 4-osbowe, pokoje familijne i pokoje premium.</p>
                        <p><a class="btn btn-lg btn-primary" href="#rooms" role="button">Sprawdź</a></p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/Images/breakfast-801827_1280.webp">
                <svg class="bd-placeholder-img" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img"><rect width="100%" height="100%" fill="#777" /></svg>
                <div class="container">
                    <div class="carousel-caption text-left">
                        <h1>Restauracja</h1>
                        <p>Smacznie, zdrowo, z bogatym menu - tak najkrócej można scharakteryzować naszą kuchnię. Możemy zagwarantować, że tak smacznie jeszcze Państwo nie jedli. Poza przepysznymi i rozmaitymi śniadaniami i obiadokolacjami serwujemy desery i domowe ciasta.</p>
                    </div>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <hr class="featurette-divider">

    <div class="container" style="padding-bottom:30px">

        <div class="row featurette">
            <div class="col-md-7">
                <h2 class="featurette-heading">Idealny <span class="text-muted">dla rodziny</span></h2>
                <p class="lead">Nasz hotel dba o to aby rodziny z dziećmi czuły się komfortowo i świetnie spędziły wspólny czas. Pobyt w naszym obiekcie to dla najmłodszych Gości prawdziwa przygoda, pełna wyjątkowych atrakcji, niezależnie od pory roku czy pogody. </p>
            </div>
            <div class="col-md-5">
                <img src="~/Images/panorama-4610864_1280.webp" class="bd-placeholder-img bd-placeholder-img-lg featurette-image img-fluid mx-auto" ba width="500" height="500" />
            </div>
        </div>

        <hr class="featurette-divider">

        <div class="row featurette">
            <div class="col-md-7 order-md-2">
                <h2 class="featurette-heading">Zimowe <span class="text-muted">atrakcje</span></h2>
                <p class="lead">W pobliżu znajdują się wyciągi narciarskie, wraz z największym kompleksem tras zjazdowych. Zima to jednak nie tylko raj dla narciarzy. Otwarte jest większość okolicznych szlaków, a wędrówka nimi w pięknej zimowej aurze, daje niezapominane przeżycia</p>
            </div>
            <div class="col-md-5 order-md-1">
                <img src="~/Images/skiers-2093037_1280.webp" class="bd-placeholder-img bd-placeholder-img-lg featurette-image img-fluid mx-auto" ba width="500" height="500" />
            </div>
        </div>
    </div>


    <div id="rooms" class="album py-5 bg-light">
        <div class="container" style="padding-top:30px; padding-bottom:30px;">
            <div class="container text-center">
                <h1>Nasze pokoje</h1>
            </div>
            <div class="row">

                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <img src="~/Images/@item.RoomImage" class="card-img-top" height="225">
                            <div class="card-body">
                                <h5 class="card-title">@Html.DisplayFor(modelItem => item.RoomType.RoomTypeName) </h5>
                                <h4 class="card-subtitle"> @Html.DisplayFor(modelItem => item.RoomPrice) /za noc</h4>
                                <h6 class="small">Cena nie zawiera dodatkowego wyżywienia</h6>
                                <p class="card-text">Max. ilość osób: @Html.DisplayFor(modelItem => item.RoomCapacity)</p>

                                <div class="d-flex justify-content-between align-items-center">

                                    <a type="button" class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.RoomId">Szczegóły</a>



                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
