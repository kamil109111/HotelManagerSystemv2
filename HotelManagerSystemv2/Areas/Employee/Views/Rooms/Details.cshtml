@model HotelManagerSystemv2.Areas.Admin.Models.Room

@{
    ViewData["Title"] = "Details";
}

<h1>Szczegóły</h1>

<!-- Page Content -->
<div class="container">

    <!-- Portfolio Item Heading -->
    <h1 class="my-4">
        Pokój nr:
        <small>@Html.DisplayFor(model => model.RoomNumber)</small>
    </h1>

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src="~/Images/@Model.RoomImage">
        </div>

        <div class="col-md-4">
            <h3 class="my-3">Opis: </h3>
            <p>@Html.DisplayFor(model => model.RoomDescription)</p>
            <h3 class="my-3">Szczegóły:</h3>
            <ul>
                <li>Cena:  @Html.DisplayFor(model => model.RoomPrice) / za noc </li>
                <li>Max. ilość osób: @Html.DisplayFor(model => model.RoomCapacity) </li>
                <li>Standard: @Html.DisplayFor(model => model.RoomType) </li>
            </ul>
        </div>

    </div>
    <br />
    <div>
        <a asp-action="Edit" asp-route-id="@Model.RoomId">Edycja</a> |
        <a asp-action="Index">Powrót do listy</a>
    </div>



</div>
<!-- /.container -->