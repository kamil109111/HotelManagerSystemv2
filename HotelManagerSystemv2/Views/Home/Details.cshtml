@model HotelManagerSystemv2.Areas.Admin.Models.Room

@{
    ViewData["Title"] = "Details";
}



<!-- Page Content -->
<div class="container">
    <h1>Details</h1>

    <!-- Portfolio Item Heading -->
    <h1 class="my-4">
        Pokój
        <small>@Html.DisplayFor(model => model.RoomType.RoomTypeName) @Html.DisplayFor(model => model.RoomCapacity) os.</small>
    </h1>

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src="~/Images/@Model.RoomImage">
        </div>

        <div class="col-md-4">
            <h3 class="my-3">Opis: </h3>
            <p>@Html.DisplayFor(model => model.RoomDescription)</p>
            <h3 class="my-3">Szczegóły:</h3>
            <ul>
                <li>Cena:  @Html.DisplayFor(model => model.RoomPrice)/ za noc </li>
                <li>Max. osób: @Html.DisplayFor(model => model.RoomCapacity) </li>

            </ul>

            <h5>Wyposażenie :</h5>

            @if (Model.RoomType.Internet == true)
            {
                <span class="badge badge-light">@Html.DisplayNameFor(model => model.RoomType.Internet)</span>
            }
            @if (Model.RoomType.TV == true)
            {
                <span class="badge badge-light">@Html.DisplayNameFor(model => model.RoomType.TV)</span>
            }
            @if (Model.RoomType.AirConditioning == true)
            {
                <span class="badge badge-light">@Html.DisplayNameFor(model => model.RoomType.AirConditioning)</span>
            }
