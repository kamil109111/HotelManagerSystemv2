            {
                <span class="badge badge-light">@Html.DisplayNameFor(model => model.RoomType.Balcony)</span>
            }
            @if (Model.RoomType.Terrace == true)
            {
                <span class="badge badge-light">@Html.DisplayNameFor(model => model.RoomType.Terrace)</span>
            }
            @if (Model.RoomType.Radio == true)
            {
                <span class="badge badge-light">@Html.DisplayNameFor(model => model.RoomType.Radio)</span>
            }
            @if (Model.RoomType.Desk == true)
            {
                <span class="badge badge-light">@Html.DisplayNameFor(model => model.RoomType.Desk)</span>
            }
            @if (Model.RoomType.Iron == true)
            {
                <span class="badge badge-light">@Html.DisplayNameFor(model => model.RoomType.Iron)</span>
            }
            <br />
            @if (Model.RoomType.Bathroom == true)
            {
                <span class="badge badge-light">@Html.DisplayNameFor(model => model.RoomType.Bathroom)</span>
            }
            @if (Model.RoomType.Hairdryer == true)
            {
